<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--페이지 제목-->
    <TextView
        android:id="@+id/page"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="145dp"
        android:layout_marginTop="19dp"
        android:text="장소 검색"
        android:textSize="30dp"
        android:textStyle="bold" />

    <!--검색버튼-->
    <Button
        android:id="@+id/search_btn"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="19dp"
        android:text="검색" />

    <!--검색어 입력창-->
    <EditText
        android:id="@+id/keyword"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/page"
        android:layout_marginEnd="94dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="-2dp"
        android:hint="키워드를 입력하세요" />


    <!--카카오 맵뷰-->
    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="413dp"
        android:layout_height="534dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="55dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="142dp">

        <Button
            android:id="@+id/zoom_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="358dp"
            android:text="-" />

        <Button
            android:id="@+id/zoom_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/zoom_minus"
            android:layout_alignEnd="@+id/zoom_minus"
            android:layout_alignStart="@+id/zoom_minus"
            android:layout_alignTop="@+id/zoom_minus"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-36dp"
            android:text="+" />
    </RelativeLayout>


    <ListView
        android:id="@+id/listview"
        android:layout_width="165dp"
        android:layout_height="534dp"
        android:layout_marginBottom="52dp"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="145dp"
        />

</RelativeLayout>